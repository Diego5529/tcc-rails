= simple_form_for [:admin, @admin_event] do |f|
  = f.error_notification
  .form-inputs
    = f.input :title
    = f.input :short_description
    = f.input :long_description
    = f.input :zip_code
    = f.label :city_id
    = f.collection_select :city_id, City.all, :id, :name, {prompt: 'Select a City'}, {class: 'form-control'}
    %br
    = f.input :address
    = f.input :address_complement
    = f.input :number
    = f.input :district
    = f.input :latitude
    = f.input :longitude
    = f.input :url_site
    = f.input :facebook_page
    = f.input :initial_date
    = f.input :end_date
    = f.input :initial_hour
    = f.input :end_hour
    = f.input :status
    = f.input :note
    = f.input :archive
    = f.label :event_type_id
    = f.collection_select :event_type_id, EventType.all, :id, :title, {prompt: 'Select a type'}, {class: 'form-control'}
    %br
    = f.label :event_category_id
    = f.collection_select :event_category_id, EventCategory.all, :id, :title, {prompt: 'Select a type'}, {class: 'form-control'}
    = f.input :use_password
    = f.input :password
    = f.input :confirm_password
    = f.input :min_users
    = f.input :max_users
    = f.label :company_id
    = f.collection_select :company_id, Company.all, :id, :name, {prompt: 'Select a type'}, {class: 'form-control'}
    %br
  .form-actions
    = f.button :submit, 'Save', class: 'btn btn-primary'