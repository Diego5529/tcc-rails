%h1 Countries
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Initials
  %tbody
    - @countries.each do |country|
      %tr
        %td= link_to country.name, country
        %td= country.initials
        %td
          = link_to 'Edit',             |
            edit_country_path(country), |
            :class => 'btn btn-mini'    |
          -#
          = link_to 'Delete',                   |
            country_path(country),              |
            :method => :delete,                 |
            :confirm => 'Are you sure?',        |
            :class => 'btn btn-mini btn-danger' |
= link_to 'New country', new_country_path, :class => 'btn btn-primary'